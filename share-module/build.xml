<?xml version="1.0"?>
<project name="AMP Build File" default="prepare-package-amp" basedir=".">
  <property name="module.id" value="recent-comments-module-share"/>

  <property name="project.dir" value="."/>
  <property name="dist.dir" value="${project.dir}/dist"/>
  <property name="amp.file" value="${dist.dir}/${module.id}.amp"/>

  <property name="config.dir" value="${project.dir}/config" />
  <property name="web.dir" value="${project.dir}/web" />

  <!-- yuicompressor -->
  <property name="yuicompress.warn" value="false" />
  <path id="yuicompressor.classpath">
    <fileset dir="lib">
      <include name="yuicompressor-2.4.2.jar"/>
      <include name="yui-compressor-ant-task-0.5.jar"/>
    </fileset>
  </path>

  <taskdef name="yuicompress" classname="net.noha.tools.ant.yuicompressor.tasks.YuiCompressorTask">
    <classpath>
      <path refid="yuicompressor.classpath"/>
    </classpath>
  </taskdef>

  <!-- Nettoyage des fichiers -min.js -->
  <target name="clean.js.minify">
    <delete includeemptydirs="true">
      <fileset dir="${web.dir}" includes="**/*-min.js" />
    </delete>
  </target>

  <!-- Make Dirs -->
  <target name="mkdir" depends="clean">
    <mkdir dir="${dist.dir}" />
  </target>

  <!-- Clean -->
  <target name="clean">
    <delete dir="${dist.dir}" />
  </target>

  <!-- Package AMP for Share -->
  <target name="prepare-package-amp" depends="mkdir, add-web-to-package-amp, add-config-to-package-amp" description="Package the Module for Share" >
    <zip destfile="${amp.file}" update="true">
      <fileset dir="${project.dir}/" includes="*.properties" />
    </zip>
  </target>

  <!-- Web -->
  <target name="add-web-to-package-amp">
    <!-- Minify JS -->
    <yuicompress fromdir="${web.dir}" todir="${web.dir}" excludes="**/*-min.js" warn="yuicompress.warn">
      <include name="**/*.js" />
    </yuicompress>

    <zip destfile="${amp.file}" update="true">
      <zipfileset dir="${web.dir}" prefix="web" />
    </zip>

    <!-- Clean -->
    <antcall target="clean.js.minify" />
  </target>

  <!-- Config (Webscripts, Site data, Messages, ...)  -->
  <target name="add-config-to-package-amp">
    <zip destfile="${amp.file}" update="true">
      <zipfileset dir="${config.dir}" prefix="WEB-INF/classes/alfresco" excludes="**/*.bak" />
    </zip>
  </target>
</project>
